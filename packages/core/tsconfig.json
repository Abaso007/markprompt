{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "node16",
    "target": "es2021",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "outDir": "dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/"]
}
